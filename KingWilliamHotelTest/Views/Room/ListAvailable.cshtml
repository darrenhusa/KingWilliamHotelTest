@model IEnumerable<Room>
@{
    ViewBag.Title = "Available Rooms";
    Layout = "_Layout";
}

<h3>Available Rooms</h3>

<table>
    <thead>
    <tr>
        <th>Room Number</th>
        <th>Room Category</th>
        <th>Room Unavailable</th>
        <th>Room Needs Cleaning</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var r in Model)
    {
        <tr>
            <td>@r.RoomId</td>
            <td>@r.Category</td>
            <td>@r.Unavailable</td>
            <td>@r.NeedsCleaning</td>
        </tr>
    }
    </tbody>
</table>
<div class="text-center">
    <a asp-action="" class="btn btn-primary">Return</a>
</div>