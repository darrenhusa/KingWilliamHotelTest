@model Room
@{
    ViewBag.Title = "Edit Room";
    Layout = "_Layout";
}

<h3>Room - Edit</h3>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RoomId"/>

    <div class="form-group">
        <label>Room Number</label><input asp-for="RoomId" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Room Category</label><input asp-for="Category" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Room Unavailable</label><input asp-for="Unavailable" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Room Needs Cleaning</label><input asp-for="NeedsCleaning" class="form-control"/>
    </div>
    
    <div class="texst-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>